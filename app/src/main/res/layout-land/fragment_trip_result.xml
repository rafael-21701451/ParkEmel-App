<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.gms.maps.MapView
            android:id="@+id/trip_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:context=".ui.fragments.TripResultFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="?attr/cardColor"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/textColor"
                    app:strokeWidth="1dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <ImageView
                            android:id="@+id/step_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:paddingStart="6dp"
                            android:src="@drawable/step_1"
                            android:tint="?attr/iconColor" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:weightSum="10">



                            <TextView
                                android:id="@+id/park_name"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_weight="9"
                                android:gravity="center"
                                android:padding="16dp"
                                android:textColor="?attr/textColor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/freeSpots"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingBottom="16dp"
                                android:textSize="12sp"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/distance1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingBottom="16dp"
                                android:textSize="12sp"
                                android:textColor="?attr/textColor" />
                        </LinearLayout>



                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="?attr/cardColor"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/textColor"
                    app:strokeWidth="1dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <ImageView
                            android:id="@+id/step_2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:src="@drawable/step_2"
                            android:tint="?attr/iconColor"
                            android:paddingStart="6dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:weightSum="10">



                            <TextView
                                android:id="@+id/inicial_bike"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_weight="9"
                                android:gravity="center"
                                android:padding="16dp"
                                android:textColor="?attr/textColor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/free_initial_bikes"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingBottom="16dp"
                                android:textSize="12sp"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/distance2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingBottom="16dp"
                                android:textSize="12sp"
                                android:textColor="?attr/textColor"
                                />
                        </LinearLayout>



                        </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="?attr/cardColor"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/textColor"
                    app:strokeWidth="1dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <ImageView
                            android:id="@+id/step_3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:src="@drawable/step_3"
                            android:tint="?attr/iconColor"
                            android:paddingStart="6dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:weightSum="10">



                            <TextView
                                android:id="@+id/final_bike"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_weight="9"
                                android:gravity="center"
                                android:padding="16dp"
                                android:textColor="?attr/textColor"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:id="@+id/free_final_docks"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingBottom="16dp"
                                android:textSize="12sp"
                                android:textColor="?attr/textColor" />

                            <TextView
                                android:id="@+id/distance3"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingBottom="16dp"
                                android:textColor="?attr/textColor"
                                android:textSize="12sp" />
                        </LinearLayout>



                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="?attr/cardColor"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/textColor"
                    app:strokeWidth="1dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <ImageView
                                android:id="@+id/finish"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/finish"
                                android:tint="?attr/iconColor"
                                android:paddingStart="6dp"
                                />

                            <TextView
                                android:id="@+id/finalAddress"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_weight="9"
                                android:gravity="center"
                                android:padding="16dp"
                                android:textColor="?attr/textColor"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>

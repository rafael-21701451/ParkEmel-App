<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".ui.fragments.TripPlannerFragment"
    android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:src="@drawable/emel"
                android:tint="?attr/emelColor"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:src="@drawable/logo_gira"
                android:tint="?attr/emelColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/descr_tp"
                android:textColor="?attr/textColor"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:textSize="19sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:layout_weight="1"
                app:errorEnabled="true"
                android:layout_marginTop="20dp"
                app:placeholderText="Ex: Av. do Brasil"
                app:boxBackgroundColor="?attr/backgroundColor"
                app:hintTextColor="?attr/formColor"
                app:counterTextColor="?attr/placeholderTextColor"
                app:boxStrokeColor="?attr/formColor"
                app:placeholderTextColor="?attr/placeholderTextColor"
                app:helperTextTextColor="?attr/placeholderTextColor"
                android:textColorHint="?attr/placeholderTextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addressInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="?attr/textColor"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/goToSearchResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/search"
                android:backgroundTint="?attr/fabColor"
                />

        </LinearLayout>

    </LinearLayout>


